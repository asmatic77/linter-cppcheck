{
  "name": "linter-cppcheck",
  "main": "./lib/main",
  "version": "0.0.1",
  "description": "Lint C and C++ source files using cppcheck",
  "keywords": [
    "lint",
    "linter",
    "c",
    "c++",
    "cppcheck"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/asmatic77/linter-cppcheck"
  },
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^4.4.0",
		"atom-package-deps": "^3.0.7"
  },
	"packages-deps": [
		"linter"
	],
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "atom": true
    }
  }
}
